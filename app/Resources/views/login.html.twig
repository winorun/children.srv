{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<!-- Custom styles for form login -->
<link href="/css/signin.css" rel="stylesheet">
{% endblock %}

{% block body %}
      <form class="form-signin" role="form" action="{{ path('login') }}" method="post">
        <h2 class="form-signin-heading">Пожалуйста войдите</h2>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Username" required autofocus>
        <input type="password" class="form-control" placeholder="Password" required id="password" name="_password">
        {# <label class="checkbox">
          <input type="checkbox" value="remember-me"> Запомнить меня
        </label>#}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Вход</button>
      </form>
  {% if error %}
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong> 
  </div>
  {% endif %}
{% endblock %}

{% block meta %}
{{ parent() }}
  <meta name="robots" content="none"/>
{% endblock %}

