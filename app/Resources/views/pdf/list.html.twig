{% extends 'base.html.twig' %}

{% block meta %}
{{ parent() }}
	<meta name="robots" content="none"/>
{% endblock %}

{% block title %}
    Админка | Менеджер документов
{% endblock %}

{% block body %}
     <div class="col-md-8">
		<header class="page-header">
		  <h1 >Менеджер документов</h1>
		</header>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
				      <th>ID</th>
				      <th>Название</th>
				      <th><a href='#' class="btn btn-default fa fa-plus" title="Добавить"> </a></th>
				    </tr>
				</thead>
		{% for pdf in pdfs %}
			    <tr>
			      <td>{{pdf.id}}</td>
			      <td><a href="{{ path('showPdf',{'id':pdf.id})}}" >{{pdf.name}}</a></td>
				  <td><a href="{{ path('dellPdf',{'id':pdf.id})}}" class= "admin_link bigfont" onclick="return confirm('Удалить страницу')" title="Удалить" > &#x2718 </a></td>
			    </tr>
		{% endfor %}	
			</table>
		<h2 >Добавить документ</h2>
			{{ form_start(form) }}
			{{ form_widget(form) }}
			{{ form_end(form) }}
		</div>
    </div>
{% endblock %}


